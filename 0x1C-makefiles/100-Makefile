CC=gcc
CFLAGS=-Wall -Werror -Wextra -pedantic
SRC=main.c holberton.c
OBJ=$(SRC:.c=.o)
NAME=holberton

.phony: $(NAME) all fclean re

all: $(NAME)

$(NAME): m.h $(OBJ)
        $(CC) $(OBJ) -o $(NAME)

clean:
        $(RM) -f *~ $(NAME)

oclean:
        $(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
